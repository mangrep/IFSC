<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/sixteen_dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/cardview_dark_background">

            <RelativeLayout
                android:id="@+id/bank_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/mainlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rowLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sixteen_dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/bank_axis"
                            android:layout_width="@dimen/sevety_two_dp"
                            android:layout_height="@dimen/sevety_two_dp"
                            android:layout_marginLeft="@dimen/sixteen_dp"
                            android:layout_marginRight="10dp"
                            android:focusable="true"
                            android:src="@drawable/axisbank"
                            app:riv_border_color="@color/colorAccent"
                            app:riv_border_width="1dp"
                            app:riv_corner_radius="2dp"
                            app:riv_mutate_background="true"
                            app:riv_oval="false"
                            app:riv_tile_mode="repeat" />

                        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/bank_hdfc"
                            android:layout_width="@dimen/sevety_two_dp"
                            android:layout_height="@dimen/sevety_two_dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="@dimen/sixteen_dp"
                            android:focusable="true"
                            android:src="@drawable/hdfcbank"
                            app:riv_border_color="@color/colorAccent"
                            app:riv_border_width="1dp"
                            app:riv_corner_radius="2dp"
                            app:riv_mutate_background="true"
                            app:riv_oval="false"
                            app:riv_tile_mode="repeat" />


                        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/bank_icici"
                            android:layout_width="@dimen/sevety_two_dp"
                            android:layout_height="@dimen/sevety_two_dp"
                            android:layout_marginEnd="@dimen/sixteen_dp"
                            android:layout_marginRight="@dimen/sixteen_dp"
                            android:focusable="true"
                            android:src="@drawable/icicibank"
                            app:riv_border_color="@color/colorAccent"
                            app:riv_border_width="1dp"
                            app:riv_corner_radius="2dp"
                            app:riv_mutate_background="true"
                            app:riv_oval="false"
                            app:riv_tile_mode="repeat" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sixteen_dp"
                        android:layout_marginTop="@dimen/sixteen_dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/bank_kotak"
                            android:layout_width="@dimen/sevety_two_dp"
                            android:layout_height="@dimen/sevety_two_dp"
                            android:layout_marginEnd="@dimen/eight_dp"
                            android:layout_marginRight="@dimen/eight_dp"
                            android:focusable="true"
                            android:src="@drawable/kotakbank"
                            app:riv_border_color="@color/colorAccent"
                            app:riv_border_width="1dp"
                            app:riv_corner_radius="2dp"
                            app:riv_mutate_background="true"
                            app:riv_oval="false"
                            app:riv_tile_mode="repeat" />


                        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/bank_yes"
                            android:layout_width="@dimen/sevety_two_dp"
                            android:layout_height="@dimen/sevety_two_dp"
                            android:layout_marginLeft="@dimen/eight_dp"
                            android:layout_marginStart="@dimen/eight_dp"
                            android:focusable="true"
                            android:src="@drawable/yesbank"
                            app:riv_border_color="@color/colorAccent"
                            app:riv_border_width="1dp"
                            app:riv_corner_radius="2dp"
                            app:riv_mutate_background="true"
                            app:riv_oval="false"
                            app:riv_tile_mode="repeat" />
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/select_bank_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mainlayout">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/bank_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sixteen_dp"
                        android:layout_marginRight="@dimen/sixteen_dp">


                        <EditText
                            android:id="@+id/select_bank_list"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:focusable="false"
                            android:hint="@string/other_banks"
                            android:inputType="none|textNoSuggestions"
                            android:longClickable="false"
                            android:textSize="14dp" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ic_arrow_drop_down_48px" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/select_branch_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/select_bank_layout">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/branch_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sixteen_dp"
                        android:layout_marginLeft="@dimen/sixteen_dp"
                        android:layout_marginRight="@dimen/sixteen_dp"
                        android:hint="@string/select_branch">

                        <EditText
                            android:id="@+id/select_branch_list"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:focusable="false"
                            android:inputType="none|textNoSuggestions"
                            android:longClickable="false"
                            android:textSize="14dp" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ic_arrow_drop_down_48px" />
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/get_bank_details"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/thirty_six_dp"
            android:layout_below="@+id/card_view"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/material_button"
            android:text="@string/get_bank_details"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/sixteen_sp" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/get_bank_details"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            app:adSize="BANNER"
            app:adUnitId="@string/banner_ad_unit_id" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/adView"
            android:layout_centerHorizontal="true"
            app:adSize="BANNER"
            app:adUnitId="@string/banner_2_ad_unit_id" />
    </RelativeLayout>
</ScrollView>
