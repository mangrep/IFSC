<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sixteen_dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/eight_dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/eight_dp"
                android:paddingRight="@dimen/eight_dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/bank_name_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/bank_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:hint="@string/bank_name"
                        android:inputType="none|textNoSuggestions"
                        android:longClickable="false"
                        android:textSize="16dp" />


                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/branch_name_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bank_name_holder">

                    <EditText
                        android:id="@+id/branch_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:hint="@string/branch_name"
                        android:inputType="none|textNoSuggestions"
                        android:longClickable="false"
                        android:textSize="16dp" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/city_name_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/branch_name_holder">


                    <EditText
                        android:id="@+id/city_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:hint="@string/city_name"
                        android:inputType="none|textNoSuggestions"
                        android:longClickable="false"
                        android:textSize="16dp" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/state_name_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/city_name_holder">


                    <EditText
                        android:id="@+id/state_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:hint="@string/state_name"
                        android:inputType="none|textNoSuggestions"
                        android:longClickable="false"
                        android:textSize="16dp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/bank_ifsc_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/state_name_holder">


                    <EditText
                        android:id="@+id/bank_ifsc"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:hint="@string/bank_ifsc"
                        android:inputType="none|textNoSuggestions"
                        android:longClickable="false"
                        android:textSize="16dp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/bank_micr_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bank_ifsc_holder">


                    <EditText
                        android:id="@+id/bank_micr"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:hint="@string/micr"
                        android:inputType="none|textNoSuggestions"
                        android:longClickable="false"
                        android:textSize="16dp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/contact_number_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bank_micr_holder">


                    <EditText
                        android:id="@+id/contact_number"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:hint="@string/contact_number"
                        android:inputType="none|textNoSuggestions"
                        android:longClickable="false"
                        android:textSize="16dp" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/bank_address_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contact_number_holder">


                    <EditText
                        android:id="@+id/bank_address"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/eight_dp"
                        android:focusable="false"
                        android:hint="@string/bank_address"
                        android:inputType="none|textNoSuggestions|textMultiLine"
                        android:longClickable="false"
                        android:textSize="16dp" />

                </android.support.design.widget.TextInputLayout>

                <!--<android.support.design.widget.TextInputLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/bank_input"-->
                <!-->-->


                <!--</android.support.design.widget.TextInputLayout>-->
                <!--<android.support.design.widget.TextInputLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/bank_input"-->
                <!-->-->


                <!--</android.support.design.widget.TextInputLayout>-->
                <!--<android.support.design.widget.TextInputLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/bank_input"-->
                <!-->-->


                <!--</android.support.design.widget.TextInputLayout>-->
                <!-- -->


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view"
            android:layout_marginTop="@dimen/sixteen_dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/footer"
            android:layout_centerInParent="true"
            android:text="@string/copy_to_clip_message" />
    </RelativeLayout>
</ScrollView>